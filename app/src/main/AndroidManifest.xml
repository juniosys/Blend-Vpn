<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.slipkprojects.sockshttp">
	
	
	<!--- Permissions -->
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
	
	
	<!--- Application -->
    <application
		android:name=".SocksHttpApp"
		android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
		android:resizeableActivity="true">
		
		
		<!--- Activities -->
		<activity android:name=".LauncherActivity"
            android:theme="@style/SplashScreenTheme" 
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
		
		<activity android:name=".SocksHttpMainActivity"
			android:label="@string/app_name"/>
		
		<activity android:name=".activities.ConfigGeralActivity"
			android:parentActivityName=".SocksHttpMainActivity"
            android:label="@string/settings"/>
		
		<activity android:name=".activities.ConfigImportFileActivity"
			android:grantUriPermissions="true"
			android:parentActivityName=".SocksHttpMainActivity"
			android:label="@string/settings_import">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="file" />
				<data android:scheme="content" />
				<data android:mimeType="*/*" />
				<data android:host="*" />
				<data android:port="*" />
				<data android:pathPattern=".*.jefersonbr"/>
				<data android:pathPattern=".*..*.jefersonbr"/>
				<data android:pathPattern=".*..*..*.jefersonbr"/>
				<data android:pathPattern=".*..*..*..*.jefersonbr"/>
				<data android:pathPattern=".*..*..*..*..*.jefersonbr"/>
				<data android:pathPattern=".*..*..*..*..*..*.jefersonbr"/>
				<data android:pathPattern=".*..*..*..*..*..*..*.jefersonbr"/>
			</intent-filter>
		</activity>
	
		<activity android:name=".activities.ConfigExportFileActivity"
			android:parentActivityName=".SocksHttpMainActivity"
			android:label="@string/settings_export"/>
		
		<activity android:name=".activities.AboutActivity"
			android:parentActivityName=".SocksHttpMainActivity"
            android:label="@string/about"/>
		
		<activity android:name=".LaunchVpn"
			android:autoRemoveFromRecents="true"
            android:excludeFromRecents="true"
            android:taskAffinity=".LaunchVPN"
			android:theme="@style/AppThemeLogin" 
			android:label="@string/app_name">
			<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
		
		<!-- This is for ensuring the background service still runs when/if the app is swiped away -->
        <activity
            android:name=".util.DummyActivity"
            android:allowTaskReparenting="true"
            android:alwaysRetainTaskState="false"
            android:clearTaskOnLaunch="true"
            android:enabled="true"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:noHistory="true"
            android:stateNotNeeded="true"
            android:theme="@android:style/Theme.Translucent" />
		
		
		<!--- Receivers -->
		<receiver
			android:name=".MainReceiver">
			<intent-filter>
				<action
					android:name=".MainReceiver.ACTION_SERVICE_STOP">
				</action>
				<action
					android:name=".MainReceiver.ACTION_SERVICE_RESTART">
				</action>
			</intent-filter>
		</receiver>

		
		<!--- Services -->
		<service android:label="SocksHttp Vpn"
			android:name=".tunnel.vpn.TunnelVpnService"
			android:exported="false"
			android:enabled="true"
			android:permission="android.permission.BIND_VPN_SERVICE">
			<intent-filter>
				<action android:name="android.net.VpnService"/>
			</intent-filter>
		</service>
		
		<service android:label="SocksHttp Service"
			android:name=".SocksHttpService"
			android:stopWithTask="false"
			android:exported="false">
		</service>
		
		<!--- Meta Data -->
		<meta-data android:name="com.google.android.gms.ads.APPLICATION_ID"
			android:value="ca-app-pub-6560862030501171~4855419162"/>
		<meta-data android:name="com.google.android.gms.ads.AD_MANAGER_APP"
			android:value="true" />
		
		
		<!-- corrige bug em Android 9 -->
		<uses-library
			android:name="org.apache.http.legacy"
			android:required="false" />
		
		
    </application>

	
</manifest>
